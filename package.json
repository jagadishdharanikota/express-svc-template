{
  "name": "express-svc-template",
  "version": "1.0.0",
  "description": "Express service template project",
  "main": "server.js",
  "scripts": {
    "start": "node --trace-sync-io src/server.js",
    "dev": "node -r dotenv/config --trace-sync-io src/server.js",
    "debug:express": "DEBUG=express:* node -r dotenv/config src/server.js",
    "dev:pm2": "pm2 start ecosystem.config.js --env development --watch",
    "dev-debug:pm2": "pm2 start ecosystem.config.js --env development_debug --watch && echo \"Starting the server in debuggable watch mode. Attach debugger from vscode for the server to respond.\" && pm2 logs",
    "test": "cross-env NODE_ENV=test jest",
    "test:debug:w": "cross-env NODE_ENV=test node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:debug:l": "cross-env NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand",
    "prod": "pm2 start ecosystem.config.js",
    "pm2": "pm2",
    "eslint": "eslint ./src/**/**.js --max-warnings 5",
    "format": "prettier-eslint --eslint-config-path ./.eslintrc.js --write '**/*.js'",
    "prettier": "prettier --write ./src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run eslint",
      "pre-push": "npm test"
    }
  },
  "author": "Jagadish Dharanikota",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.23.1",
    "mongodb": "^3.6.2",
    "morgan": "^1.9.1",
    "pm2": "^4.4.1",
    "promise": "^8.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^24.3.5",
    "husky": "^6.0.0",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": ">=14.13.0"
  }
}
